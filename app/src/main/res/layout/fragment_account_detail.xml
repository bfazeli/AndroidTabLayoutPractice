<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_account_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.bfazeli.androidtablayoutpractice.AccountDetailFragment"
    tools:showIn="@layout/activity_account_detail" android:orientation="vertical"
    android:weightSum="10" android:background="@android:color/holo_orange_dark">


    <TextView
        android:text="@string/service_hours"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/textView"
        android:textAlignment="center" android:textSize="30sp" android:textStyle="normal|bold"
        android:layout_marginLeft="100px" android:layout_marginRight="100px"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" android:layout_weight="1" android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView" android:adjustViewBounds="true"
        android:scaleType="fitCenter" android:layout_weight="3" android:layout_height="0dp"
        android:layout_marginTop="20dp" android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" android:clickable="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:weightSum="4"
        android:layout_marginTop="10dp" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:layout_weight="1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText"
            android:clickable="false" android:focusable="false" android:focusableInTouchMode="false"
            android:cursorVisible="false" android:layout_weight="3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2" android:layout_weight="1" android:clickable="true"
            android:onClick="editName"/>
    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/textView2"
        android:layout_weight="1"
        android:textSize="18sp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:gravity="left|center"/>
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/textView3" android:layout_weight="1"
        android:gravity="left|center" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:textSize="18sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:weightSum="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:layout_weight="1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2"
            android:clickable="false" android:focusable="false" android:focusableInTouchMode="false"
            android:cursorVisible="false" android:layout_weight="3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView3" android:layout_weight="1" android:clickable="true"
            android:onClick="editName"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:weightSum="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:layout_weight="1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText3"
            android:clickable="false" android:focusable="false" android:focusableInTouchMode="false"
            android:cursorVisible="false" android:layout_weight="3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView4" android:layout_weight="1" android:clickable="true"
            android:onClick="editName"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="18dp" android:clipToPadding="false" android:layout_weight="1"
        android:layout_marginTop="20dp" android:layout_marginBottom="20dp">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
            android:elevation="4dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_dark"/>
    </RelativeLayout>

</LinearLayout>
